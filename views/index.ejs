<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cocktail Recommender</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    .hero-section {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 3rem 0;
      margin-bottom: 2rem;
      border-radius: 0 0 1rem 1rem;
    }
    .cocktail-card {
      box-shadow: 0 4px 6px rgba(0,0,0,0.1);
      border: none;
      border-radius: 1rem;
      overflow: hidden;
    }
    .cocktail-img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      min-height: 400px;
    }
    .ingredient-item {
        background-color: #e9ecef;
        border-radius: 20px;
        padding: 5px 15px;
        margin: 5px;
        display: inline-block;
        font-size: 0.9rem;
    }
  </style>
</head>

<body>

  <div class="hero-section text-center">
    <div class="container">
      <h1 class="display-4 fw-bold">Cocktail Recommender</h1>
      <p class="lead">Select your favorite ingredient and let us surprise you!</p>

      <div class="row justify-content-center mt-4">
        <div class="col-md-6">
            <form action="/" method="POST" class="d-flex gap-2" id="mixForm">
                <select name="type" class="form-select form-select-lg" aria-label="Select your favorite ingredient">
                  <% for( let i=0; i < options.length; i++ ) { %>
                    <option value="<%= options[i] %>" <%= (locals.selectedIngredient && selectedIngredient === options[i]) ? 'selected' : '' %>><%= options[i] %></option>
                  <% } %>
                </select>
                <button type="submit" class="btn btn-warning btn-lg px-4 fw-bold" id="mixBtn">Mix!</button>
            </form>
        </div>
      </div>
    </div>
  </div>

  <div class="container mb-5">
    <% if (locals.result) { %>
      <div class="card cocktail-card">
        <div class="row g-0">
          <div class="col-md-5">
            <img src="<%= result.strDrinkThumb %>" class="cocktail-img" alt="<%= result.strDrink %>">
          </div>
          <div class="col-md-7">
            <div class="card-body p-4 p-md-5">
              <h2 class="card-title display-5 fw-bold mb-3"><%= result.strDrink %></h2>

              <div class="mb-3">
                <span class="badge bg-secondary"><%= result.strCategory %></span>
                <span class="badge bg-info text-dark"><%= result.strAlcoholic %></span>
                <span class="badge bg-light text-dark border"><%= result.strGlass %></span>
              </div>

              <h4 class="mt-4 mb-3 border-bottom pb-2">Ingredients</h4>
              <div class="mb-4">
                <% if (locals.ingredients) { %>
                    <% ingredients.forEach(function(ing) { %>
                        <div class="d-flex justify-content-between align-items-center border-bottom py-2">
                            <span class="fw-bold"><%= ing.name %></span>
                            <span class="text-muted"><%= ing.measure %></span>
                        </div>
                    <% }); %>
                <% } %>
              </div>

              <h4 class="mb-3 border-bottom pb-2">Instructions</h4>
              <p class="card-text fs-5" style="white-space: pre-line;"><%= result.strInstructions %></p>

            </div>
          </div>
        </div>
      </div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    document.getElementById('mixForm').addEventListener('submit', function(e) {
      const btn = document.getElementById('mixBtn');
      btn.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Mixing...';
      btn.disabled = true;
    });
  </script>
</body>
</html>
